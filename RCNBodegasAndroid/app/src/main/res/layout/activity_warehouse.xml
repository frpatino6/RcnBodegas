<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/warehouse_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/warehouse_type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Bodega: Ambientaci贸n"
                    android:textColor="#333"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ddd" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_option_one_selected"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Programa"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_option_two_selected"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Legalizado Por"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ddd" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_option_selected"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Fecha de Legalizaci贸n"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ddd" />

                <Button
                    android:id="@+id/warehouse_btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:background="@color/primaryColor"
                    android:text="OK"
                    android:textColor="@color/primaryTextColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/warehouse_element"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_element_barcode_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="C贸digo de Barras"
                        android:text=""
                        android:textColor="#333" />
                    android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_element_desc_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descripci贸n"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_element_type_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Tipo de Elemento"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_element_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Marca"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_element_price_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Precio"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/warehouse_element_value_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Valor"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/warehouse_element_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/warehouse_element_photos_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Capturar Fotos"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/warehouse_element_photos_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/warehouse_element_photos_item_one"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:text="+"
                            android:textColor="@color/primaryTextColor"
                            tools:ignore="Suspicious0dp" />

                        <Button
                            android:id="@+id/warehouse_element_photos_item_two"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:text="+"
                            android:textColor="@color/primaryTextColor"
                            tools:ignore="Suspicious0dp" />

                        <Button
                            android:id="@+id/warehouse_element_photos_item_three"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:text="+"
                            android:textColor="@color/primaryTextColor"
                            tools:ignore="Suspicious0dp" />

                        <Button
                            android:id="@+id/warehouse_element_photos_item_four"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:text="+"
                            android:textColor="@color/primaryTextColor"
                            tools:ignore="Suspicious0dp" />

                        <Button
                            android:id="@+id/warehouse_element_photos_item_five"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:text="+"
                            android:textColor="@color/primaryTextColor"
                            tools:ignore="Suspicious0dp" />

                        <Button
                            android:id="@+id/warehouse_element_photos_item_six"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".15"
                            android:text="+"
                            android:textColor="@color/primaryTextColor"
                            tools:ignore="Suspicious0dp" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/warehouse_btn_new_element"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:background="@color/primaryColor"
                    android:padding="16dp"
                    android:text="Nuevo Elemento"
                    android:textColor="@color/primaryTextColor" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>