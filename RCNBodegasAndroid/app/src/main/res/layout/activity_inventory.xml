<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/inventory_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/inventory_warehouse_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Bodega"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/inventory_show_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Programa"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/inventory_responsible_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Responsable"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/inventory_type_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Tipo de Elemento"
                        android:text=""
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <EditText
                        android:id="@+id/inventory_date_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:hint="Fecha de Inventario"
                        android:textColor="#333" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/inventory_btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:background="@color/primaryColor"
                    android:text="OK"
                    android:textColor="@color/primaryTextColor" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/inventory_element"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eee"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/inventory_element_barcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/inventory_element_barcode_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="C贸digo de Barras"
                            android:textColor="#333"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/inventory_element_barcode_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ingrese el c贸digo de barras" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inventory_element_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/inventory_element_desc_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Descripci贸n"
                            android:textColor="#333"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/inventory_element_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Descripci贸n del elemento"
                            android:textColor="#333" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inventory_element_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/inventory_element_type_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tipo de Elemento"
                            android:textColor="#333"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/inventory_element_type_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tipo"
                            android:textColor="#333" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inventory_element_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/inventory_element_brand_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Marca"
                            android:textColor="#333"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/inventory_element_brand_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Marca del Elemento"
                            android:textColor="#333" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inventory_element_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/inventory_element_price_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Precio"
                            android:textColor="#333"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/inventory_element_price_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Precio del Elemento"
                            android:textColor="#333" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inventory_element_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/inventory_element_value_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Valor Materia"
                            android:textColor="#333"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/inventory_element_value_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Valor del Elemento"
                            android:textColor="#333" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inventory_element_photos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/inventory_element_photos_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Fotos Capturadas"
                            android:textColor="#333"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/inventory_element_photos_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/inventory_btn_new_element"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/primaryColor"
                        android:text="Nuevo Elemento"
                        android:textColor="@color/primaryTextColor" />

                    <Button
                        android:id="@+id/inventory_btn_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/primaryColor"
                        android:paddingLeft="64dp"
                        android:paddingTop="16dp"
                        android:paddingRight="64dp"
                        android:paddingBottom="16dp"
                        android:text="Revisar"
                        android:textColor="@color/primaryTextColor" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
