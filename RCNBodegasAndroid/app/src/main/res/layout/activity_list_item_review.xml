<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/review_form_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_vertical_margin_normal"
    android:paddingTop="@dimen/activity_vertical_margin_normal"
    android:paddingRight="@dimen/activity_vertical_margin_normal"
    android:paddingBottom="@dimen/activity_vertical_margin_normal"
    android:weightSum="12"
    tools:context=".Activities.CompanyListActivity">

    <TextView
        android:id="@+id/txtResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_view_title_resumen_size"
        android:text="TextView" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/review_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_vertical_margin_normal"
        android:layout_marginLeft="@dimen/activity_vertical_margin_normal"
        android:layout_marginTop="@dimen/activity_vertical_margin_normal"
        android:layout_marginEnd="@dimen/activity_vertical_margin_normal"
        android:layout_marginRight="@dimen/activity_vertical_margin_normal"
        android:layout_marginBottom="@dimen/activity_vertical_margin_normal"
        android:scrollbars="vertical" />
    <ProgressBar
        android:id="@+id/review_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />
</LinearLayout>