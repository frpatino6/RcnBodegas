<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/review_form_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".Activities.CompanyListActivity">

    <TextView
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="0"
        android:id="@+id/txtResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_view_title_resumen_size"
        android:background="?attr/colorPrimary"
        android:textColor="#fff"
        android:text="" />
    <TextView
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:background="?attr/colorPrimary"
        android:textColor="#fff"
        android:layout_weight="0"
        android:id="@+id/txtAdded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_view_title_resumen_size"
        android:paddingBottom="@dimen/activity_vertical_margin_normal"
        android:text="" />
    <android.support.v7.widget.RecyclerView
        android:layout_weight="11"
        android:id="@+id/review_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/activity_vertical_margin_normal"
        android:layout_marginLeft="@dimen/activity_vertical_margin_normal"
        android:layout_marginTop="@dimen/activity_vertical_margin_normal"
        android:layout_marginEnd="@dimen/activity_vertical_margin_normal"
        android:layout_marginRight="@dimen/activity_vertical_margin_normal"
        android:layout_marginBottom="@dimen/activity_vertical_margin_normal"
        android:scrollbars="vertical" />
    <TextView

        android:textAlignment="center"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:id="@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/abc_text_view_title_resumen_size"
        android:text="150000" />

    <ProgressBar
        android:id="@+id/review_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />
</LinearLayout>